{
	"name": "rkr/simple-router",
	"description": "A simple routing library",
	"homepage": "https://github.com/rkrx/php-simple-router",
	"license": "MIT",
	"type": "library",
	"minimum-stability": "stable",
	"authors": [{
		"name": "Ron Kirschler",
		"email": "ron.kirschler@gmail.com"
	}],
	"require": {
		"php": ">= 8.2",
		"psr/event-dispatcher": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"DvTeam\\Routing\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"DvTeam\\Routing\\": "tests/"
		}
	},
	"require-dev": {
		"phpstan/phpstan": "^2.1",
		"phpunit/phpunit": "^12.0"
	},
	"scripts": {
		"phpstan": "phpstan analyse --memory-limit=4G -c phpstan.neon"
	},
	"config": {
		"platform": {
			"php": "8.2.12"
		}
	}
}
